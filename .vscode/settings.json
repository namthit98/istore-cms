{
  "workbench.iconTheme": "vscode-icons",
  "editor.fontFamily": "Fira Code",
  "editor.fontWeight": "300", // Regular
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "window.zoomLevel": 2,
  "files.autoSave": "off",
  "eslint.autoFixOnSave": true,
  "editor.mouseWheelZoom": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ]
}